{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "/server.js",
      "headers": {
        "Cache-Control": "s-maxage=0, no-store, no-cache, must-revalidate"
      }
    },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}